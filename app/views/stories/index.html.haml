.row
  .col-md-10.col-md-offset-1
    .side-padding-5
      %header.hero.flex-container.flex-space-btw
        %h1.hero-title Your Stories
        .button-set
          = link_to "Write a story", new_story_path, class: "button green-border-button"
      %div{"data-animation" => "fadeInUp-fadeOutDown"}
        - if @stories.any?
          - @stories.each do |story|
            .story-card{:id => "story_#{story.id}"}
              %strong.sc-title= link_to story.title, edit_story_path(story)
              %small.sc-metadata
                Published #{time_ago_in_words(story.published_at)} ago Â• #{story_length_in_minutes(story.body)}
                .btn-group
                  %button.dropdown-toggle{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :type => "button"}
                    %span.glyphicon.glyphicon-chevron-down
                  %ul.dropdown-menu
                    %li= link_to "Edit", edit_story_path(story)
        - else
          %p.no-sc-message No published stories yet

